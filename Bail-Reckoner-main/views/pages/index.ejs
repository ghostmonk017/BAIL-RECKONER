                tension: 0.1,
              },
            ],
          },
          options: {
            responsive: true,
            scales: {
              y: {
                beginAtZero: true,
                title: {
                  display: true,
                  text: "Number of Applications (in lakh)",
                },
              },
              x: {
                title: {
                  display: true,
                  text: "Year",
                },
              },
            },
            plugins: {
              legend: {
                display: true,
                position: "top",
              },
              tooltip: {
                callbacks: {
                  label: function (context) {
                    let label = context.dataset.label || "";
                    if (label) {
                      label += ": ";
                    }
                    label += context.parsed.y + " lakh";
                    return label;
                  },
                },
              },
            },
          },
        });
      </script>
